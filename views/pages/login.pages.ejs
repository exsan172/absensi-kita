<%- include("../layout/header.ejs") %>
    
    <div class="d-flex justify-content-center mt-5">
        <div class="col-11 col-md-5 col-lg-4 border p-2 bg-white shadow">
            <div class="d-flex w-100 flex-column">
                <div class="d-flex justify-content-center w-100 pt-5 pb-4 px-4 px-md-5">
                    <img src="/images/absensi-kita.png" alt="logo-absensi-kita" class="logo-login">
                </div>
                <div class="d-flex justify-content-center w-100 px-4 px-md-5">
                    <form action="" method="post" class="w-100">
                        <div class="d-flex w-100 my-4">
                            <input type="email" name="username" placeholder="Masukan email anda." class="p-2 w-100 border" required>
                        </div>
                        <div class="d-flex w-100 my-4">
                            <input type="password" name="password" placeholder="Masukan password anda." class="p-2 w-100 border" required>
                        </div>
                        <div class="d-flex w-100 my-4 justify-content-end">
                            <a href="/forgot-password" class="text-primary text-decoration-none">Lupa password ?</a>
                        </div>
                        <div class="d-flex w-100 mt-4">
                            <input type="submit" value="Masuk !" class="p-2 w-100 border-0 bg-primary text-white">
                        </div>
                        <div class="d-flex w-100 my-5 justify-content-center">
                            <a href="/register" class="text-primary text-decoration-none">Belum punya akun ?, Daftar di sini</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include("../layout/footer.ejs") %>